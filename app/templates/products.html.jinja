{% extends "base.html.jinja" %}
{% block content %}
    <ul class="list-group">
    {% for product in products %}
        <li class="list-group-item">
            <a href=product/{{product}}>{{product}}</a>
            <span class="badge bg-primary rounded-pill">{{loop.index}}</span>
        </li>
        {% endfor %}
    </ul>
{% endblock %}